[Unit]
Description=ActivityWatch Lid Watcher
Documentation=https://github.com/ActivityWatch/aw-watcher-lid
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/activitywatch/aw-watcher-lid
ExecStart=/usr/bin/poetry run aw-watcher-lid
Restart=on-failure
RestartSec=10

# Environment
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=default.target
